<%= form_tag(welcome_index_path, method: :get) do %> 
  <p>
  <%= label_tag :AND %><br>
   <%= select_tag(:option,options_for_select([['starts_with', "starts_with"], ['equal', "equal"]],params[:option])) %>
   <%= text_field_tag :name, params[:name] %>
   <br>
    <%= select_tag(:cond,options_for_select([['>', ">"], ['<', "<"], ['=', "="]],params[:cond])) %>
	<%= number_field_tag :goals, params[:goals] %>
	<br>
	<%= select_tag(:ready,options_for_select([['-', "-"],['true', "true"], ['false', "false"]],params[:ready])) %>
	<br>
	<%= label_tag :OR %><br>
	<%= select_tag(:option_or,options_for_select([['starts_with', "starts_with"], ['equal', "equal"]],params[:option_or])) %>
    <%= text_field_tag :name_or, params[:name_or]%>
    <br>
    <%= select_tag(:cond_or,options_for_select([['>', ">"], ['<', "<"], ['=', "="]], params[:cond_or])) %>
	<%= number_field_tag :goals_or, params[:goals_or]%>
	<br>
	<%= select_tag(:ready_or,options_for_select([['-', "-"],['true', "true"], ['false', "false"]],params[:ready_or])) %>
	<br>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.goals %></td>
		<td><%= player.ready %></td>
		<td><%= player.id %></td>
		<br>
         <code lang="javascript">
</code>
      </tr>
    <% end %>
  </tbody>